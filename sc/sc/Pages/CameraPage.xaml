<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="sc.CameraPage">
    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="takePhoto" Clicked="TakePhoto_OnClicked" Text="Take Photo"/>
            <Button x:Name="pickPhoto" Clicked="PickPhoto_OnClicked" Text="Pick Photo"/>
            
            <Button x:Name="Avatar" Clicked="Avatar_OnClicked"></Button>
            <Image x:Name="image"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>